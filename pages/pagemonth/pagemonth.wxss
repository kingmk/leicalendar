/* pages/pagemonth/pagemonth.wxss */

.container-month {
  padding-top: 0;
}

.month-info {
  width: 100%;
  box-sizing: border-box;
  height: 17%;
  position: relative;

  /* display: flex;
  flex-direction: column;
  justify-content: center; */
}

.month-info-inner {
  padding-right: 40rpx;
  width: 100%;
  position: absolute;
  bottom: 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.month-info-avatar {
  width: 100rpx;
  height: 100rpx;
  margin-left: 54rpx;
  margin-right: 54rpx;
  border-radius: 50%;
  overflow: hidden;
}

.month-info-text {
  flex: 1;
}

.month-info .month-ename {
  margin-top: 8rpx;
  font-size: 32rpx;
  line-height: 36rpx;
  font-family: Helvetica Neue LT Std;
}

.btn-today {
  font-size: 24rpx;
  color: #918983;
  position: absolute;
  right: 40rpx;
  bottom: 0;
  width: 55rpx;
  height: 55rpx;
}

.btn-today .icon-btn-today {
  width: 100%;
  height: 100%;
}

.btn-today.hide {
  display: none;
}

.swiper-month {
  /* position: absolute; */
  width: 100%;
  height: 72%;
  /* top: 200rpx; */
  /* bottom: 140rpx; */
}

.container-tags {
  /* position: absolute; */
  width: 100%;
  /* bottom: 0; */
  /* height: 140rpx; */
  height: 11%;
}

.special-day {
  position: absolute;
}

.special-day .img-special-day {
  width: 100%;
  height: 100%;
}