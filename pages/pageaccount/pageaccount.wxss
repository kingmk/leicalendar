
page {
  background-color: #f2f2f2;
}

.menus {
  margin-top: 30rpx;
}

.menu {
  font-size: 32rpx;
  color: #000;
  background-color: #fff;
  height: 105rpx;
  line-height: 105rpx;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  margin-bottom: 17rpx;
  padding-left: 109rpx;
  position: relative;
}

.menu .icon {
  position: absolute;
  width: 45rpx;
  height: 105rpx;
  left: 36rpx;
}

.menu .right {
  position: absolute;
  right: 39rpx;
  width: 40rpx;
  height: 105rpx;
}

.qrcodes {
  position: absolute;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  bottom: 40rpx;
}

.qrcode {
  width: 180rpx;
  text-align: center;
}

.qrcode .qrcode-img {
  width: 100rpx;
  height: 100rpx;
}

.qrcode .qrcode-title{
  width: 100%;
  text-align: center;
  font-size: 18rpx;
}

.qrmask {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.6);
}

.qrmask .qrpanel {
  position: absolute;
  width: 500rpx;
  height: 630rpx;
  left: 50%;
  top: 50%;
  margin-left: -250rpx;
  margin-top: -315rpx;
  background-color: #fff;
  border-radius: 25rpx;
  overflow: hidden;
  text-align: center;
}

.qrmask .qrpanel .qrpanel-title {
  margin-top: 50rpx;
  font-size: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: #000;
}

.qrmask .qrpanel .qrpanel-desc {
  margin-top: 24rpx;
  font-size: 20rpx;
  height: 20rpx;
  color: #6d6d6d;
}

.qrmask .qrpanel .qrpanel-img {
  width: 240rpx;
  height: 240rpx;
  vertical-align:top;
  margin-top: 42rpx;
}

.qrmask .qrpanel .qrpanel-info {
  margin-top: 28rpx;
  font-size: 20rpx;
  line-height: 20rpx;
  color: #6d6d6d;
}

.qrmask .qrpanel .qrpanel-searchinfo {
  margin: 30rpx auto 0;
  width: 310rpx;
  height: 44rpx;
  line-height: 44rpx;
  border-radius: 22rpx;
  background-color: #c12121;
  color: #fff;
  font-size: 20rpx;
}

.qrmask .qrpanel .qrpanel-btn {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 60rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  background-color: #adadad;
  color: #fff;
}