.fortune-info .info-top .info-left .info-lucks {
  display: inline-block;
  width: 100%;
  height: 64rpx;
  background-color: #f5f3ea;
  border-radius: 5rpx;
  padding: 16rpx 0;
  box-sizing: border-box;
  box-shadow: 0 0 15rpx #ccc;
  text-align: left;
}

.fortune-info .info-top .info-left .info-luck {
  display: inline-block;
  width: 50%; 
  height: 30rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  text-align: center;
  color: #918983;
  box-sizing: border-box;
}

.fortune-info .info-top .info-left .info-luck.first{
  border-right: 1px solid #918983;
}

.fortune-info .info-top .info-left .info-guard {
  margin-top: 32rpx;
  line-height: 30rpx;
  height: 30rpx;
}

.fortune-info .info-top .info-right {
  font-size: 26rpx;
  color: #918983;
}

.fortune-info .info-top .info-right .info-bazi {
  height: 64rpx;
  line-height: 64rpx;
}

.fortune-info .info-top .info-right .info-solar {
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 20rpx;
}

.fortune-info .info-events {
  margin: 20rpx 20rpx 0;
  height: 260rpx;
  background-color: #f5f3ea;
  border-radius: 15rpx;
  box-shadow: 0 0 10rpx #ccc;
}

.fortune-info .info-events .info-event {
  height: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.fortune-info .info-events .info-event .event-icon{
  width: 66rpx;
  height: 64rpx;
  vertical-align: middle;
  margin-left: 40rpx;
}

.fortune-info .info-events .info-event .event-text{
  flex: 1;
  margin-left: 23rpx; 
  margin-right: 15rpx;
  line-height: 36rpx;
  font-size: 24rpx;
  color: #918983;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.fortune-info .info-events .info-event .event-text.event-large{
  font-size: 32rpx;
}