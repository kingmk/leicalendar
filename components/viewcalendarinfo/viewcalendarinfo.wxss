.fortune-info {
  height: 100%;
}
.fortune-info.hide {
  display: none;
}

.fortune-info .info-top {
  box-sizing: border-box;
  padding: 10rpx 25rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.fortune-info .info-top .info-left{
  font-size: 24rpx;
  color: #918983;
  width: 200rpx;
  text-align: center;
}

